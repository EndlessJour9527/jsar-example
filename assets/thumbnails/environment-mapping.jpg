<svg xmlns="http://www.w3.org/2000/svg" width="300" height="200" viewBox="0 0 300 200">
  <defs>
    <linearGradient id="sky" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" stop-color="#1a237e"/>
      <stop offset="50%" stop-color="#283593"/>
      <stop offset="100%" stop-color="#3949ab"/>
    </linearGradient>
    
    <radialGradient id="sphere-gradient" cx="50%" cy="40%" r="60%" fx="30%" fy="30%">
      <stop offset="0%" stop-color="#ffffff" stop-opacity="0.9"/>
      <stop offset="70%" stop-color="#b0bec5" stop-opacity="0.7"/>
      <stop offset="100%" stop-color="#78909c" stop-opacity="0.6"/>
    </radialGradient>
    
    <linearGradient id="ground" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" stop-color="#5d4037"/>
      <stop offset="100%" stop-color="#3e2723"/>
    </linearGradient>
    
    <filter id="blur" x="-50%" y="-50%" width="200%" height="200%">
      <feGaussianBlur in="SourceGraphic" stdDeviation="1" />
    </filter>
    
    <filter id="glow" x="-50%" y="-50%" width="200%" height="200%">
      <feGaussianBlur in="SourceGraphic" stdDeviation="2" />
    </filter>
  </defs>
  
  <!-- 背景天空 -->
  <rect width="300" height="200" fill="url(#sky)"/>
  
  <!-- 星星 -->
  <g>
    <circle cx="30" cy="30" r="1" fill="white" opacity="0.8"/>
    <circle cx="60" cy="20" r="1.2" fill="white" opacity="0.7"/>
    <circle cx="90" cy="40" r="0.8" fill="white" opacity="0.9"/>
    <circle cx="120" cy="25" r="1" fill="white" opacity="0.8"/>
    <circle cx="150" cy="15" r="1.5" fill="white" opacity="0.7"/>
    <circle cx="180" cy="35" r="0.7" fill="white" opacity="0.9"/>
    <circle cx="210" cy="20" r="1.2" fill="white" opacity="0.8"/>
    <circle cx="240" cy="30" r="1" fill="white" opacity="0.7"/>
    <circle cx="270" cy="25" r="0.9" fill="white" opacity="0.9"/>
    <circle cx="45" cy="50" r="1.1" fill="white" opacity="0.8"/>
    <circle cx="75" cy="60" r="0.8" fill="white" opacity="0.7"/>
    <circle cx="105" cy="55" r="1.3" fill="white" opacity="0.9"/>
    <circle cx="135" cy="45" r="0.7" fill="white" opacity="0.8"/>
    <circle cx="165" cy="65" r="1" fill="white" opacity="0.7"/>
    <circle cx="195" cy="50" r="1.2" fill="white" opacity="0.9"/>
    <circle cx="225" cy="60" r="0.8" fill="white" opacity="0.8"/>
    <circle cx="255" cy="45" r="1.1" fill="white" opacity="0.7"/>
    <circle cx="285" cy="55" r="0.9" fill="white" opacity="0.9"/>
  </g>
  
  <!-- 地面 -->
  <rect x="0" y="150" width="300" height="50" fill="url(#ground)"/>
  
  <!-- 反射球体 -->
  <circle cx="150" cy="100" r="40" fill="url(#sphere-gradient)" stroke="#eceff1" stroke-width="1" opacity="0.9"/>
  
  <!-- 球体上的环境反射 -->
  <g opacity="0.7">
    <!-- 山脉反射 -->
    <path d="M130,90 L140,80 L150,85 L160,75 L170,90" stroke="#81d4fa" stroke-width="1" fill="none" filter="url(#blur)"/>
    
    <!-- 树木反射 -->
    <path d="M125,95 L125,105 M120,100 L130,100 M123,97 L127,103" stroke="#66bb6a" stroke-width="1" fill="none" filter="url(#blur)"/>
    <path d="M175,95 L175,105 M170,100 L180,100 M173,97 L177,103" stroke="#66bb6a" stroke-width="1" fill="none" filter="url(#blur)"/>
    
    <!-- 云朵反射 -->
    <path d="M140,70 Q145,65 150,70 Q155,65 160,70" stroke="white" stroke-width="1" fill="none" filter="url(#blur)"/>
  </g>
  
  <!-- 高光 -->
  <circle cx="135" cy="85" r="5" fill="white" opacity="0.7" filter="url(#glow)"/>
  
  <!-- 环境元素 -->
  <!-- 山脉 -->
  <path d="M0,150 L50,100 L80,130 L120,90 L180,120 L220,80 L260,110 L300,90 L300,150 Z" fill="#546e7a" opacity="0.8"/>
  
  <!-- 树木 -->
  <g transform="translate(60, 140)" opacity="0.9">
    <rect x="-2" y="-20" width="4" height="20" fill="#5d4037"/>
    <polygon points="-10,-20 0,-35 10,-20" fill="#2e7d32"/>
    <polygon points="-8,-25 0,-40 8,-25" fill="#2e7d32"/>
  </g>
  
  <g transform="translate(240, 130)" opacity="0.9">
    <rect x="-2" y="-20" width="4" height="20" fill="#5d4037"/>
    <polygon points="-12,-20 0,-38 12,-20" fill="#2e7d32"/>
    <polygon points="-9,-28 0,-45 9,-28" fill="#2e7d32"/>
  </g>
  
  <!-- 云朵 -->
  <g transform="translate(80, 40)" opacity="0.5" filter="url(#blur)">
    <circle cx="0" cy="0" r="10" fill="white"/>
    <circle cx="10" cy="0" r="8" fill="white"/>
    <circle cx="-8" cy="5" r="7" fill="white"/>
    <circle cx="5" cy="-5" r="9" fill="white"/>
  </g>
  
  <g transform="translate(220, 50)" opacity="0.4" filter="url(#blur)">
    <circle cx="0" cy="0" r="8" fill="white"/>
    <circle cx="8" cy="0" r="6" fill="white"/>
    <circle cx="-6" cy="4" r="5" fill="white"/>
    <circle cx="4" cy="-4" r="7" fill="white"/>
  </g>
  
  <text x="150" y="180" font-family="Arial" font-size="14" text-anchor="middle" fill="white">环境映射</text>
</svg>
<svg xmlns="http://www.w3.org/2000/svg" width="300" height="200" viewBox="0 0 300 200">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#2c3e50"/>
      <stop offset="100%" stop-color="#4a6b8a"/>
    </linearGradient>
  </defs>
  <rect width="300" height="200" fill="url(#bg)"/>
  
  <!-- 地面 -->
  <rect x="0" y="150" width="300" height="50" fill="#34495e"/>
  
  <!-- 立方体 -->
  <g transform="translate(80, 100)">
    <rect x="-20" y="-20" width="40" height="40" fill="#e74c3c" stroke="#c0392b" stroke-width="2"/>
  </g>
  
  <!-- 球体 -->
  <circle cx="150" cy="100" r="25" fill="#3498db" stroke="#2980b9" stroke-width="2"/>
  
  <!-- 圆锥体 -->
  <polygon points="220,120 200,70 240,70" fill="#2ecc71" stroke="#27ae60" stroke-width="2"/>
  
  <!-- 光源效果 -->
  <circle cx="50" cy="50" r="20" fill="#f1c40f" opacity="0.8">
    <animate attributeName="opacity" values="0.5;0.8;0.5" dur="3s" repeatCount="indefinite"/>
  </circle>
  
  <text x="150" y="180" font-family="Arial" font-size="14" text-anchor="middle" fill="white">基础场景</text>
</svg>
<svg xmlns="http://www.w3.org/2000/svg" width="300" height="200" viewBox="0 0 300 200">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#2c3e50"/>
      <stop offset="100%" stop-color="#4a6b8a"/>
    </linearGradient>
    <filter id="shadow" x="-20%" y="-20%" width="140%" height="140%">
      <feGaussianBlur in="SourceAlpha" stdDeviation="3"/>
      <feOffset dx="2" dy="2" result="offsetblur"/>
      <feComponentTransfer>
        <feFuncA type="linear" slope="0.5"/>
      </feComponentTransfer>
      <feMerge> 
        <feMergeNode/>
        <feMergeNode in="SourceGraphic"/> 
      </feMerge>
    </filter>
  </defs>
  
  <rect width="300" height="200" fill="url(#bg)"/>
  
  <!-- 地面 -->
  <rect x="0" y="150" width="300" height="50" fill="#34495e"/>
  
  <!-- 交互对象 -->
  <g transform="translate(150, 100)" filter="url(#shadow)">
    <!-- 立方体 -->
    <rect x="-60" y="-20" width="40" height="40" fill="#e74c3c" stroke="#fff" stroke-width="2">
      <animateTransform attributeName="transform" type="rotate" from="0" to="360" dur="10s" repeatCount="indefinite"/>
    </rect>
    
    <!-- 球体 -->
    <circle cx="0" cy="0" r="25" fill="#3498db" stroke="#fff" stroke-width="2">
      <animate attributeName="r" values="25;28;25" dur="2s" repeatCount="indefinite"/>
    </circle>
    
    <!-- 圆锥体 -->
    <polygon points="60,20 40,-20 80,-20" fill="#2ecc71" stroke="#fff" stroke-width="2">
      <animateTransform attributeName="transform" type="translate" values="0,0;0,-5;0,0" dur="1.5s" repeatCount="indefinite"/>
    </polygon>
  </g>
  
  <!-- 控制器 -->
  <g transform="translate(150, 160)">
    <circle cx="0" cy="0" r="15" fill="#9b59b6" stroke="#8e44ad" stroke-width="2"/>
    <line x1="-10" y1="-10" x2="10" y2="10" stroke="white" stroke-width="2"/>
    <line x1="10" y1="-10" x2="-10" y2="10" stroke="white" stroke-width="2"/>
  </g>
  
  <!-- 手势指示 -->
  <path d="M50,100 C60,90 70,85 80,90 C90,95 90,110 90,120 C90,130 85,140 80,150" stroke="#f1c40f" stroke-width="3" fill="none" stroke-dasharray="5,5">
    <animate attributeName="stroke-dashoffset" values="10;0" dur="1s" repeatCount="indefinite"/>
  </path>
  
  <circle cx="80" cy="90" r="8" fill="#f1c40f"/>
  
  <text x="150" y="180" font-family="Arial" font-size="14" text-anchor="middle" fill="white">交互对象</text>
</svg>
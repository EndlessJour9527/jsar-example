<svg xmlns="http://www.w3.org/2000/svg" width="300" height="200" viewBox="0 0 300 200">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#000000"/>
      <stop offset="100%" stop-color="#1a237e"/>
    </linearGradient>
    
    <radialGradient id="particle-glow" cx="50%" cy="50%" r="50%" fx="50%" fy="50%">
      <stop offset="0%" stop-color="#ffffff"/>
      <stop offset="100%" stop-color="#ffffff" stop-opacity="0"/>
    </radialGradient>
    
    <filter id="blur-small" x="-50%" y="-50%" width="200%" height="200%">
      <feGaussianBlur in="SourceGraphic" stdDeviation="1" />
    </filter>
    
    <filter id="blur-medium" x="-50%" y="-50%" width="200%" height="200%">
      <feGaussianBlur in="SourceGraphic" stdDeviation="2" />
    </filter>
    
    <filter id="blur-large" x="-50%" y="-50%" width="200%" height="200%">
      <feGaussianBlur in="SourceGraphic" stdDeviation="3" />
    </filter>
  </defs>
  
  <!-- 背景 -->
  <rect width="300" height="200" fill="url(#bg)"/>
  
  <!-- 火焰粒子系统 -->
  <g transform="translate(75, 100)">
    <!-- 火焰核心 -->
    <circle cx="0" cy="0" r="15" fill="#ff5722" opacity="0.8" filter="url(#blur-small)">
      <animate attributeName="r" values="15;18;15" dur="1s" repeatCount="indefinite"/>
      <animate attributeName="opacity" values="0.8;0.9;0.8" dur="1s" repeatCount="indefinite"/>
    </circle>
    
    <!-- 火焰中层 -->
    <circle cx="0" cy="-5" r="20" fill="#ff9800" opacity="0.6" filter="url(#blur-medium)">
      <animate attributeName="r" values="20;25;20" dur="1.5s" repeatCount="indefinite"/>
      <animate attributeName="cy" values="-5;-10;-5" dur="1.5s" repeatCount="indefinite"/>
    </circle>
    
    <!-- 火焰外层 -->
    <circle cx="0" cy="-15" r="25" fill="#ffeb3b" opacity="0.4" filter="url(#blur-large)">
      <animate attributeName="r" values="25;30;25" dur="2s" repeatCount="indefinite"/>
      <animate attributeName="cy" values="-15;-25;-15" dur="2s" repeatCount="indefinite"/>
    </circle>
    
    <!-- 火星 -->
    <g>
      <circle cx="-10" cy="-30" r="1.5" fill="#ffeb3b" opacity="0.9">
        <animate attributeName="cy" values="-10;-40" dur="2s" repeatCount="indefinite"/>
        <animate attributeName="cx" values="-5;-15" dur="2s" repeatCount="indefinite"/>
        <animate attributeName="opacity" values="0.9;0" dur="2s" repeatCount="indefinite"/>
      </circle>
      
      <circle cx="5" cy="-15" r="1" fill="#ffeb3b" opacity="0.9">
        <animate attributeName="cy" values="-5;-35" dur="1.5s" repeatCount="indefinite"/>
        <animate attributeName="cx" values="0;10" dur="1.5s" repeatCount="indefinite"/>
        <animate attributeName="opacity" values="0.9;0" dur="1.5s" repeatCount="indefinite"/>
      </circle>
      
      <circle cx="10" cy="-20" r="1.2" fill="#ffeb3b" opacity="0.9">
        <animate attributeName="cy" values="-10;-45" dur="2.5s" repeatCount="indefinite"/>
        <animate attributeName="cx" values="5;15" dur="2.5s" repeatCount="indefinite"/>
        <animate attributeName="opacity" values="0.9;0" dur="2.5s" repeatCount="indefinite"/>
      </circle>
    </g>
    
    <text x="0" y="30" font-family="Arial" font-size="10" text-anchor="middle" fill="white">火焰</text>
  </g>
  
  <!-- 烟雾粒子系统 -->
  <g transform="translate(150, 100)">
    <!-- 烟雾层 -->
    <g opacity="0.7">
      <circle cx="0" cy="0" r="15" fill="#78909c" filter="url(#blur-medium)">
        <animate attributeName="cy" values="0;-30" dur="3s" repeatCount="indefinite"/>
        <animate attributeName="opacity" values="0.7;0" dur="3s" repeatCount="indefinite"/>
        <animate attributeName="r" values="15;25" dur="3s" repeatCount="indefinite"/>
      </circle>
      
      <circle cx="-5" cy="-5" r="12" fill="#90a4ae" filter="url(#blur-medium)">
        <animate attributeName="cy" values="-5;-40" dur="3.5s" repeatCount="indefinite"/>
        <animate attributeName="cx" values="-5;-15" dur="3.5s" repeatCount="indefinite"/>
        <animate attributeName="opacity" values="0.7;0" dur="3.5s" repeatCount="indefinite"/>
        <animate attributeName="r" values="12;20" dur="3.5s" repeatCount="indefinite"/>
      </circle>
      
      <circle cx="5" cy="-8" r="14" fill="#b0bec5" filter="url(#blur-medium)">
        <animate attributeName="cy" values="-8;-45" dur="4s" repeatCount="indefinite"/>
        <animate attributeName="cx" values="5;15" dur="4s" repeatCount="indefinite"/>
        <animate attributeName="opacity" values="0.7;0" dur="4s" repeatCount="indefinite"/>
        <animate attributeName="r" values="14;22" dur="4s" repeatCount="indefinite"/>
      </circle>
    </g>
    
    <text x="0" y="30" font-family="Arial" font-size="10" text-anchor="middle" fill="white">烟雾</text>
  </g>
  
  <!-- 爆炸粒子系统 -->
  <g transform="translate(225, 100)">
    <!-- 爆炸核心 -->
    <circle cx="0" cy="0" r="15" fill="#ff5722" opacity="0.9" filter="url(#blur-small)">
      <animate attributeName="r" values="5;15;5" dur="2s" repeatCount="indefinite"/>
      <animate attributeName="opacity" values="0.9;0.7;0.9" dur="2s" repeatCount="indefinite"/>
    </circle>
    
    <!-- 爆炸波 -->
    <circle cx="0" cy="0" r="10" fill="none" stroke="#ff9800" stroke-width="2" opacity="0.8">
      <animate attributeName="r" values="10;40;10" dur="2s" repeatCount="indefinite"/>
      <animate attributeName="stroke-width" values="2;0.5;2" dur="2s" repeatCount="indefinite"/>
      <animate attributeName="opacity" values="0.8;0;0.8" dur="2s" repeatCount="indefinite"/>
    </circle>
    
    <!-- 爆炸碎片 -->
    <g>
      <!-- 碎片1 -->
      <path d="M0,0 L10,10" stroke="#ffeb3b" stroke-width="2" opacity="0.9">
        <animate attributeName="d" values="M0,0 L10,10; M0,0 L20,20; M0,0 L10,10" dur="2s" repeatCount="indefinite"/>
        <animate attributeName="opacity" values="0.9;0;0.9" dur="2s" repeatCount="indefinite"/>
      </path>
      
      <!-- 碎片2 -->
      <path d="M0,0 L-10,10" stroke="#ffeb3b" stroke-width="2" opacity="0.9">
        <animate attributeName="d" values="M0,0 L-10,10; M0,0 L-20,20; M0,0 L-10,10" dur="2s" repeatCount="indefinite"/>
        <animate attributeName="opacity" values="0.9;0;0.9" dur="2s" repeatCount="indefinite"/>
      </path>
      
      <!-- 碎片3 -->
      <path d="M0,0 L10,-10" stroke="#ffeb3b" stroke-width="2" opacity="0.9">
        <animate attributeName="d" values="M0,0 L10,-10; M0,0 L20,-20; M0,0 L10,-10" dur="2s" repeatCount="indefinite"/>
        <animate attributeName="opacity" values="0.9;0;0.9" dur="2s" repeatCount="indefinite"/>
      </path>
      
      <!-- 碎片4 -->
      <path d="M0,0 L-10,-10" stroke="#ffeb3b" stroke-width="2" opacity="0.9">
        <animate attributeName="d" values="M0,0 L-10,-10; M0,0 L-20,-20; M0,0 L-10,-10" dur="2s" repeatCount="indefinite"/>
        <animate attributeName="opacity" values="0.9;0;0.9" dur="2s" repeatCount="indefinite"/>
      </path>
      
      <!-- 碎片5 -->
      <path d="M0,0 L0,15" stroke="#ffeb3b" stroke-width="2" opacity="0.9">
        <animate attributeName="d" values="M0,0 L0,15; M0,0 L0,25; M0,0 L0,15" dur="2s" repeatCount="indefinite"/>
        <animate attributeName="opacity" values="0.9;0;0.9" dur="2s" repeatCount="indefinite"/>
      </path>
      
      <!-- 碎片6 -->
      <path d="M0,0 L0,-15" stroke="#ffeb3b" stroke-width="2" opacity="0.9">
        <animate attributeName="d" values="M0,0 L0,-15; M0,0 L0,-25; M0,0 L0,-15" dur="2s" repeatCount="indefinite"/>
        <animate attributeName="opacity" values="0.9;0;0.9" dur="2s" repeatCount="indefinite"/>
      </path>
      
      <!-- 碎片7 -->
      <path d="M0,0 L15,0" stroke="#ffeb3b" stroke-width="2" opacity="0.9">
        <animate attributeName="d" values="M0,0 L15,0; M0,0 L25,0; M0,0 L15,0" dur="2s" repeatCount="indefinite"/>
        <animate attributeName="opacity" values="0.9;0;0.9" dur="2s" repeatCount="indefinite"/>
      </path>
      
      <!-- 碎片8 -->
      <path d="M0,0 L-15,0" stroke="#ffeb3b" stroke-width="2" opacity="0.9">
        <animate attributeName="d" values="M0,0 L-15,0; M0,0 L-25,0; M0,0 L-15,0" dur="2s" repeatCount="indefinite"/>
        <animate attributeName="opacity" values="0.9;0;0.9" dur="2s" repeatCount="indefinite"/>
      </path>
    </g>
    
    <text x="0" y="30" font-family="Arial" font-size="10" text-anchor="middle" fill="white">爆炸</text>
  </g>
  
  <text x="150" y="180" font-family="Arial" font-size="14" text-anchor="middle" fill="white">粒子效果</text>
</svg>
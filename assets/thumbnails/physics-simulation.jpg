<svg xmlns="http://www.w3.org/2000/svg" width="300" height="200" viewBox="0 0 300 200">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#2c3e50"/>
      <stop offset="100%" stop-color="#4a6b8a"/>
    </linearGradient>
    <filter id="shadow" x="-20%" y="-20%" width="140%" height="140%">
      <feGaussianBlur in="SourceAlpha" stdDeviation="2"/>
      <feOffset dx="1" dy="1" result="offsetblur"/>
      <feComponentTransfer>
        <feFuncA type="linear" slope="0.5"/>
      </feComponentTransfer>
      <feMerge> 
        <feMergeNode/>
        <feMergeNode in="SourceGraphic"/> 
      </feMerge>
    </filter>
  </defs>
  
  <rect width="300" height="200" fill="url(#bg)"/>
  
  <!-- 地面/平台 -->
  <rect x="50" y="150" width="200" height="10" fill="#95a5a6" stroke="#7f8c8d" stroke-width="1"/>
  <rect x="70" y="120" width="70" height="10" fill="#95a5a6" stroke="#7f8c8d" stroke-width="1" transform="rotate(-15, 70, 120)"/>
  <rect x="180" y="100" width="70" height="10" fill="#95a5a6" stroke="#7f8c8d" stroke-width="1" transform="rotate(20, 250, 100)"/>
  
  <!-- 物理对象 -->
  <!-- 球体1 - 下落 -->
  <circle cx="100" cy="50" r="15" fill="#e74c3c" stroke="#c0392b" stroke-width="2" filter="url(#shadow)">
    <animate attributeName="cy" values="50;130" dur="1s" repeatCount="indefinite"/>
    <animate attributeName="cx" values="100;85" dur="1s" repeatCount="indefinite"/>
  </circle>
  
  <!-- 球体2 - 弹跳 -->
  <circle cx="200" cy="80" r="12" fill="#3498db" stroke="#2980b9" stroke-width="2" filter="url(#shadow)">
    <animate attributeName="cy" values="80;140;100;140;110;140;120;140;130;140" dur="2s" repeatCount="indefinite"/>
  </circle>
  
  <!-- 立方体 - 旋转下落 -->
  <rect x="150" y="30" width="30" height="30" fill="#2ecc71" stroke="#27ae60" stroke-width="2" filter="url(#shadow)">
    <animateTransform attributeName="transform" type="rotate" from="0 165 45" to="90 165 45" dur="1s" repeatCount="indefinite"/>
    <animate attributeName="y" values="30;120" dur="1.5s" repeatCount="indefinite"/>
  </rect>
  
  <!-- 多边形 - 碰撞 -->
  <polygon points="50,70 65,60 70,75 55,85" fill="#f1c40f" stroke="#f39c12" stroke-width="2" filter="url(#shadow)">
    <animate attributeName="points" values="50,70 65,60 70,75 55,85; 55,140 70,130 75,145 60,155" dur="1.2s" repeatCount="indefinite"/>
    <animateTransform attributeName="transform" type="rotate" from="0 60 75" to="45 60 75" dur="1.2s" repeatCount="indefinite"/>
  </polygon>
  
  <!-- 重力指示箭头 -->
  <g opacity="0.7">
    <line x1="40" y1="40" x2="40" y2="70" stroke="#ecf0f1" stroke-width="2" stroke-dasharray="3,3"/>
    <polygon points="35,65 40,75 45,65" fill="#ecf0f1"/>
    <text x="30" y="55" font-family="Arial" font-size="10" text-anchor="end" fill="#ecf0f1">重力</text>
  </g>
  
  <!-- 碰撞效果 -->
  <g transform="translate(200, 140)" opacity="0.8">
    <circle cx="0" cy="0" r="5" fill="none" stroke="#ecf0f1" stroke-width="1">
      <animate attributeName="r" values="0;15" dur="1s" repeatCount="indefinite"/>
      <animate attributeName="opacity" values="0.8;0" dur="1s" repeatCount="indefinite"/>
    </circle>
  </g>
  
  <text x="150" y="180" font-family="Arial" font-size="14" text-anchor="middle" fill="white">物理模拟</text>
</svg>